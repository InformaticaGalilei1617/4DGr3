<script language="javascript">
function disegnaParallelepipedo() {
mioCanvas=document.getElementById("creaParallelepipedo");
context=mioCanvas.getContext("2d");
context.rect(100, 100, 100, 100);
context.fillStyle="rgba(255, 0, 0, 1)";
context.fill();
}
function disegnaGriglia(){
mioCanvas=document.getElementById("creaGriglia");
context=mioCanvas.getContext("2d");
context.moveTo(0,800);
context.lineTo(600,800);
context.stroke();
context.moveTo(600,800);
context.lineTo(800,454);
context.stroke();
context.moveTo(800,454);
context.lineTo(200,454);
context.stroke();
context.moveTo(200,454);
context.lineTo(0,800);
context.stroke();

context.moveTo(150,800);
context.lineTo(350,454);
context.stroke();
context.moveTo(500,454);
context.lineTo(300,800);
context.stroke();
context.moveTo(450,800);
context.lineTo(650,454);
context.stroke();

context.moveTo(750,541);
context.lineTo(150,541);
context.stroke();
context.moveTo(700,628);
context.lineTo(100,628);
context.stroke();
context.moveTo(650,715);
context.lineTo(50,715);
context.stroke();
}
</script>
